<div id="<%= dom_id game %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= game.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= game.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Rules:</strong>
    <%= game.rules %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this game", game, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this game', edit_game_path(game), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
